        <artifactId>microsphere-faulttolerance</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>microsphere-faulttolerance-core</artifactId>
    <version>${revision}</version>
    <packaging>jar</packaging>

    <properties>
