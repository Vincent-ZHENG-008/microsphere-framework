        <microprofile.version>3.0</microprofile.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.microsphere</groupId>
                <artifactId>microsphere-faulttolerance-dependencies</artifactId>
                <version>${revision}</version>
                <type>pom</type>
